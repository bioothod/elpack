/home/admin/elliptics/log/*.log /srv/elliptics/log/*.log /var/log/elliptics/*.log
{
	daily
	maxsize 2G
	missingok
	compress
	dateext
	dateformat -%Y.%m.%d-%s
	rotate 300
	postrotate
		killall -HUP backrunner
	endscript
}
